<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaoguo.caipuapp.fragments.RecommendFragment">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_recommend"
        android:layout_width="match_parent"
        android:layout_height="100dp"></android.support.v4.view.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerView_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>
