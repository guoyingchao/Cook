<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaoguo.caipuapp.activities.SearchActivity">
    <RelativeLayout
        android:id="@+id/top_search"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/back_image"
            android:onClick="backImageClick"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_richpush_actionbar_back"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/rlSearchFrameDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/back_image">
        <EditText
            android:id="@+id/search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入搜内容"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:background="@drawable/search_background_shape"
            android:textCursorDrawable="@null"
            />
            <ImageView
                android:id="@+id/delete_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alt_delete"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:layout_alignRight="@+id/search_content"
                android:layout_alignEnd="@+id/search_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_toRightOf="@id/rlSearchFrameDelete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:textSize="16sp"/>
    </RelativeLayout>
    <View
        android:id="@+id/horizontal_line"
        android:layout_below="@id/top_search"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#C6C6C6"></View>
    <LinearLayout
        android:id="@+id/hestory_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_line"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/hestory_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="10dp"
        android:text="历史搜索"
        />
    <TextView
        android:id="@+id/hestory_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:text="清空历史"
        android:layout_below="@id/horizontal_line"
        android:layout_alignParentRight="true"
        />
    </LinearLayout>
    <com.xiaoguo.caipuapp.bean.FlowLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/hestory_flowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hestory_linearLayout">
    </com.xiaoguo.caipuapp.bean.FlowLayout>
    <View
        android:id="@+id/horizontal_line2"
        android:layout_below="@id/hestory_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#C6C6C6"></View>
    <TextView
        android:id="@+id/hot_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="热门搜索"
        android:layout_below="@id/horizontal_line2"/>

</RelativeLayout>
